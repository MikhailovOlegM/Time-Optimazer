<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/menuTime"
        android:src="@drawable/startbuttonn"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:layout_above="@+id/menuStat"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/menuSettings"
        android:src="@drawable/settingsbuttonn"
        android:scaleType="centerCrop"
        android:background="#00000000"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/menuStat"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/menuStat"
        android:src="@drawable/statisticbuttonn"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:src="@drawable/name"
        android:scaleType="centerCrop"
        android:layout_above="@+id/menuTime"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/abouthow"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/menuInfo"
        android:src="@drawable/abouthowbuttonn"
        android:background="#00000000"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/menuUs"
        android:src="@drawable/abouthowbuttonn"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />
</RelativeLayout>

